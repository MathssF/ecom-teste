{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist",
    "baseUrl": "./",
    "jsx": "preserve",
    "allowJs": true,
    "paths": {
      "*": [
        "./*"
      ]
    },
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "./**/*",
    "../../global/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
