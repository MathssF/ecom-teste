{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../dist/back",
    "baseUrl": "./",
    "paths": {
      "@global/*": ["../global/*"],
      "@back/*": ["./src/*"]
    },
    "composite": true
  },
  "references": [
    { "path": "../global" }
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
}
