{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../dist/global",
    "composite": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@back/*": ["../back/src/*"],
      "@front/*": ["../front/src/*"]
    }
  },
  "references": [
    { "path": "../back" },
    { "path": "../front" }
  ],
  "include": [
    "**/*.ts",
    "../back/src/**/*.ts"
  ]
}
