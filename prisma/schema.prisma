generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Genre {
  id    String  @id
  name  String  @db.VarChar(20)
  movies GenreMovie[]
}

model Language {
  id           String  @id @db.VarChar(2) // iso_639_1, ex: "en", "pt"
  englishName  String  @db.VarChar(20)
  trending     TrendingEntry[]
  movies       Movie[]
}

model Movie {
  id               String         @id
  title            String
  originalTitle    String
  originalLanguage String         @db.VarChar(6)
  adult            Boolean
  genres           GenreMovie[]
  details          MovieDetail?
  companies        MovieCompany[]
  trending         TrendingStory[]

  language         Language       @relation(fields: [originalLanguage], references: [id])
}

model GenreMovie {
  genreId String
  movieId String

  genre   Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)
  movie   Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@id([genreId, movieId])
}

model MovieDetail {
  movieId     String  @id
  voteCount   Int
  voteAverage Float
  popularity  Float
  releaseDate DateTime
  posterPath  String?

  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
}

model Company {
  id      String @id
  name    String
  movies  MovieCompany[]
}

model MovieCompany {
  movieId   String
  companyId String

  movie   Movie   @relation(fields: [movieId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@id([movieId, companyId])
}

model TrendingEntry {
  id          String   @id  @default(uuid())
  datetime    DateTime
  mode        Int
  languageId  String?

  language    Language? @relation(fields: [languageId], references: [id])
  movies      TrendingStory[]
}

model TrendingStory {
  trendingId   String
  movieId      String
  votesCount   Int
  votesAverage Float
  popularity   Float
  page         Int
  rank         Int
  rankPage     Int

  trending TrendingEntry @relation(fields: [trendingId], references: [id], onDelete: Cascade)
  movie    Movie         @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@id([trendingId, movieId])
}

model DevError {
  id        Int     @id @default(autoincrement())
  message   String
  path      String
  method    String
}

model DevNotes {
  id        Int    @id @default(autoincrement())
  message   String
}